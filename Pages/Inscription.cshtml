@page
@model BetCyclingFriends.Pages.Inscription
@{
    ViewData["Title"] = "Inscription";
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4 mb-4">Créer un compte</h1>
        <p class="lead">
            Rejoignez BetCyclingFriends pour parier avec vos amis sur les courses de cyclisme. Créez un compte en quelques étapes simples !
        </p>
    </div>

    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <h3 class="text-center mb-4">Inscription</h3>

                @if (!ModelState.IsValid)
                {
                <div class="alert alert-danger">
                    <ul>
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                        <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
                }

                <form method="post">
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="addon-wrapping">Nom d'utilisateur</span>
                        <input type="text" class="form-control" name="Username" placeholder="Jean1234" aria-label="Jean1234" aria-describedby="addon-wrapping">
                    </div>

                    <div class="input-group mb-3">
                        <span class="input-group-text" id="addon-wrapping">Mot de passe</span>
                        <input type="password" class="form-control" name="Password" placeholder="********" aria-label="Mot de passe" aria-describedby="addon-wrapping">
                    </div>

                    <div class="input-group mb-3">
                        <span class="input-group-text" id="addon-wrapping">Répéter le mot de passe</span>
                        <input type="password" class="form-control" name="PasswordRepeat" placeholder="********" aria-label="Répéter le mot de passe" aria-describedby="addon-wrapping">
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary btn-lg">S'inscrire</button>
                    </div>
                </form>

                <!-- Bouton de redirection vers la connexion -->
                <div class="text-center mt-3">
                    <p>Déjà un compte ?</p>
                    <a href="/" class="btn btn-outline-secondary btn-lg">Se connecter</a>
                </div>
            </div>
        </div>
    </div>
</div>
