@page "/ModifierParis"
@model ModifierParisModel
@{
ViewData["Title"] = "Modifier Pari";
}

<div class="container mt-5">
    <!-- Nom de la course -->
    <div class="row justify-content-center mb-4">
        <div class="col-md-8 text-center">
            <h1 class="display-5">Modifier le pari pour la course : Tour de France</h1>
        </div>
    </div>

    <!-- Formulaire de modification du pari -->
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post">
                <div class="mb-3">
                    <label for="favori" class="form-label">Coureur Favori</label>
                    <input type="text" class="form-control" id="favori" name="Favori" placeholder="Nom du coureur favori" required>
                </div>

                <div class="mb-3">
                    <label for="bonus" class="form-label">Coureur Bonus</label>
                    <input type="text" class="form-control" id="bonus" name="Bonus" placeholder="Nom du coureur bonus" required>
                </div>

                <button type="submit" class="btn btn-primary">Valider les modifications</button>
            </form>
        </div>
    </div>
</div>
