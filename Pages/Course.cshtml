@page
@model CourseModel
@{
ViewData["Title"] = "Mes Ligues";
}

<div class="container mt-5">
    <!-- Nom de la course et bouton pour parier -->
    <div class="row justify-content-between align-items-center mb-5">
        <div class="col-md-8">
            <h1 class="display-4">Tour de France</h1>
        </div>
        <div class="col-md-4 text-end">
            <button class="btn btn-primary btn-lg" onclick="window.location.href='/Parier'">
                Parier pour cette course
            </button>
        </div>
    </div>

    <!-- Top 3 de la course -->
    <div class="row mb-5">
        <div class="col-md-8 mx-auto">
            <h3 class="mb-4">Top 3 des participants</h3>
            <table class="table table-hover shadow-lg">
                <thead class="table-secondary">
                <tr>
                    <th scope="col">Position</th>
                    <th scope="col">Joueur</th>
                    <th scope="col">Coureur Favori</th>
                    <th scope="col">Bonus</th>
                    <th scope="col">Points</th>
                </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>JohnDoe</td>
                        <td>Tadej Pogacar</td>
                        <td>Egan Bernal</td>
                        <td>150</td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>JaneDoe</td>
                        <td>Primoz Roglic</td>
                        <td>Richard Carapaz</td>
                        <td>120</td>
                    </tr>
                    <tr>
                        <td>3</td>
                        <td>BobSmith</td>
                        <td>Geraint Thomas</td>
                        <td>Richie Porte</td>
                        <td>100</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Bouton pour voir le classement général -->
    <div class="row">
        <div class="col-md-12 text-center">
            <button class="btn btn-outline-secondary btn-lg" onclick="window.location.href='/ClassementCourse'">
                Voir le classement général
            </button>
        </div>
    </div>
</div>